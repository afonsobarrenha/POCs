# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|

  #config.vm.box = "ubuntu/xenial64"
  config.vm.box = "ubuntu/bionic64"

  config.vm.box_check_update = false
  # config.vm.network "forwarded_port", guest: 80, host: 8080
  # config.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
  # config.vm.network "private_network", ip: "192.168.33.10"
  config.vm.network "public_network", bridge: "wlp3s0"

  # config.vm.synced_folder "../data", "/vagrant_data"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "512"
  end
  
  config.vm.define "ansible-server" do |node|
    node.vm.hostname = "ansible-server"
    node.vm.network "private_network", ip: "172.17.177.40"
    node.vm.provision "shell", inline: <<-SHELL
      echo 'Instalando os pacotes base'
      apt-get update
      apt-get install language-pack-pt -y
      apt-get install python python-pip -y
      pip install ansible

      echo 'Criando a chave pÃºblica'
      sudo ssh-keygen -b 2048 -t rsa -f /root/.ssh/id_rsa -q -N ""
      sudo cat /root/.ssh/id_rsa.pub >> /vagrant/ansible-server.pub

      echo 'Configurando o authorized_keys'
      sudo cat /vagrant/ansible-server.pub >> /root/.ssh/authorized_keys
    SHELL
  end

  (1..1).each do |i|
    config.vm.define "app-server-#{i}" do |node|
      node.vm.hostname = "app-server-#{i}"
      node.vm.network "private_network", ip: "172.17.188.#{i}"
      node.vm.provision "shell", inline: <<-SHELL
        echo 'Instalando os pacotes base'
        apt-get update
        apt-get install language-pack-pt -y

        echo 'Configurando o authorized_keys'
        sudo mkdir -p /root/.ssh/
        sudo touch /root/.ssh/authorized_keys
        sudo cat /vagrant/ansible-server.pub >> /root/.ssh/authorized_keys
      SHELL
    end
  end

end












