Vagrant.configure("2") do |config|

  config.vm.box = "ubuntu/trusty64"
  config.vm.network "public_network", bridge: "wlp3s0"

  config.vm.provider "virtualbox" do |v|
	  v.memory = 1024
  end

  config.vm.define "app-server" do |m|
	  m.vm.network "private_network", ip: "10.0.0.2"
  end

  config.vm.define "app-bd" do |m|
	  m.vm.network "private_network", ip: "10.0.0.1"
  end

end