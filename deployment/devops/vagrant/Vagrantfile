Vagrant.configure("2") do |config|

    config.vm.box = "ubuntu_aws"
    config.vm.box_url = "https://github.com/mitchellh/vagrant-aws/raw/master/dummy.box"

    config.vm.provider "virtualbox" do |v|
      v.memory = 1024
    end

    config.vm.define :web do |web_config|
        web_config.vm.network "private_network", ip: "192.168.50.10"
        web_config.vm.provision "puppet" do |puppet|
            puppet.manifest_file = "web.pp"
        end
        web_config.vm.provider :aws do |aws|
            aws.tags = { 'Name' => 'MusicJungle (vagrant)'}
        end
    end

    config.vm.provider :aws do |aws, override|
        aws.access_key_id = "xxx"
        aws.secret_access_key = "xxx"

        aws.keypair_name = "devops"
        aws.ami = "ami-dff5d1b3"
        aws.instance_type = "t2.micro"
        #aws.region = "sa-east-1a"
        aws.security_groups = ['devops']

        override.ssh.username = "ubuntu"
        override.ssh.private_key_path = "/home/afonsobarrenha/afonsobarrenha.pem"
    end

    #sudo puppet apply /vagrant/manifests/web.pp
    #http://192.168.50.10:8080/vraptor-musicjungle

end